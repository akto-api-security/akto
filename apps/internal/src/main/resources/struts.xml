<?xml version="1.0" encoding="UTF-8"?>

<!DOCTYPE struts PUBLIC
        "-//Apache Software Foundation//DTD Struts Configuration 2.3//EN"
        "http://struts.apache.org/dtds/struts-2.3.dtd">
<struts>
    <constant name="struts.devMode" value="false"></constant>
    <constant name="struts.enable.SlashesInActionNames" value="true"/>
    <constant name="struts.mapper.alwaysSelectFullNamespace" value="false"/>
    <constant name="struts.patternMatcher" value="regex" />
    <constant name="struts.matcher.appendNamedParameters" value="true"/>
    <constant name="struts.multipart.maxSize" value = "209715200" />

    <package name="user2" namespace="" extends="struts-default, json-default">
        <action name="api/provisionSubscription" class="com.akto.action.internal.SubscriptionAction" method="provisionSubscription">
            <interceptor-ref name="json"/>
            <interceptor-ref name="defaultStack" />
            <result name="SUCCESS" type="json">
                <param name="root">checkoutResult</param>
            </result>
            <result name="ERROR" type="json">
                <param name="statusCode">422</param>
                <param name="ignoreHierarchy">false</param>
                <param name="includeProperties">^actionErrors.*</param>
            </result>
        </action>
    </package>

</struts>
