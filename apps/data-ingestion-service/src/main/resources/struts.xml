<?xml version="1.0" encoding="UTF-8"?>

<!DOCTYPE struts PUBLIC
        "-//Apache Software Foundation//DTD Struts Configuration 2.3//EN"
        "http://struts.apache.org/dtds/struts-2.3.dtd">
<struts>
    <constant name="struts.devMode" value="false"></constant>
    <constant name="struts.enable.SlashesInActionNames" value="true"/>
    <constant name="struts.mapper.alwaysSelectFullNamespace" value="false"/>
    <constant name="struts.patternMatcher" value="regex" />
    <constant name="struts.matcher.appendNamedParameters" value="true"/>
    <constant name="struts.multipart.maxSize" value = "209715200" />

    <package name="user2" namespace="" extends="struts-default, json-default">

        <!-- Default action for root path (/) - redirects to healthCheck -->
        <default-action-ref name="healthCheck" />

        <action name="api/ingestData" class="com.akto.action.IngestionAction" method="ingestData">
            <interceptor-ref name="json"/>
            <interceptor-ref name="defaultStack" />
            <result name="SUCCESS" type="json">
                <param name="includeProperties">^success.*</param>
            </result>
            <result name="ERROR" type="json">
                <param name="statusCode">422</param>
                <param name="ignoreHierarchy">false</param>
                <param name="includeProperties">^actionErrors.*</param>
            </result>
        </action>

        <action name="healthCheck" class="com.akto.action.IngestionAction" method="healthCheck">
            <interceptor-ref name="defaultStack" />
            <result name="SUCCESS" type="json"/>
            <result name="ERROR" type="json">
                <param name="statusCode">422</param>
                <param name="ignoreHierarchy">false</param>
                <param name="includeProperties">^actionErrors.*</param>
            </result>
        </action>

        <action name="api/http-proxy" class="com.akto.action.HttpProxyAction" method="httpProxy">
            <interceptor-ref name="json"/>
            <interceptor-ref name="defaultStack" />
            <result name="SUCCESS" type="json">
                <param name="includeProperties">^success,^message,^data.*</param>
            </result>
            <result name="ERROR" type="json">
                <param name="statusCode">422</param>
                <param name="ignoreHierarchy">false</param>
                <param name="includeProperties">^success,^message,^data.*</param>
            </result>
        </action>

        <!-- Arcade Webhook Endpoints -->
        <action name="pre" class="com.akto.action.ArcadeWebhookAction" method="arcade">
            <interceptor-ref name="defaultStack" />
            <result name="SUCCESS" type="json">
                <param name="includeProperties">^code,^error_message</param>
            </result>
            <result name="ERROR" type="json">
                <param name="includeProperties">^code,^error_message</param>
            </result>
        </action>

        <action name="post" class="com.akto.action.ArcadeWebhookAction" method="arcade">
            <interceptor-ref name="defaultStack" />
            <result name="SUCCESS" type="json">
                <param name="includeProperties">^code,^error_message</param>
            </result>
            <result name="ERROR" type="json">
                <param name="includeProperties">^code,^error_message</param>
            </result>
        </action>

        <action name="api/http-proxy/truefoundry" class="com.akto.action.TrueFoundryProxyAction" method="truefoundry">
            <interceptor-ref name="json"/>
            <interceptor-ref name="defaultStack" />
            <result name="SUCCESS" type="json">
                <param name="excludeProperties">.*</param>
            </result>
            <result name="BLOCKED" type="json">
                <param name="statusCode">400</param>
                <param name="ignoreHierarchy">false</param>
                <param name="excludeProperties">.*</param>
            </result>
            <result name="ERROR" type="json">
                <param name="statusCode">422</param>
                <param name="ignoreHierarchy">false</param>
                <param name="includeProperties">^actionErrors.*</param>
            </result>
        </action>


    </package>

</struts>
