        "HealthCheckPath": "/metrics",
        "HealthCheckPort": "8000",
        "HealthCheckProtocol": "HTTP",
        "HealthCheckTimeoutSeconds": 6,
        "HealthyThresholdCount": 2,
        "UnhealthyThresholdCount": 2,
        "VpcId": {
          "Fn::GetAtt": [
            "CustomSourceGetVpcDetails",
            "VpcId"
          ]
        },
        "Targets": []
      }
    },
