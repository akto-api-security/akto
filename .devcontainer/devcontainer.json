{
	"name": "Akto",
	"dockerComposeFile": "docker-compose.devcontainer.yml",
	"service": "akto",
	"workspaceFolder": "/workspace",

	"features": {
		"ghcr.io/devcontainers/features/java:1": {
			"version": "none",
			"installMaven": "true",
			"mavenVersion": "3.6.3"
		},

		"ghcr.io/devcontainers/features/node:1": {
			"version": "17"
		}
	},
	"overrideCommand": false,
	"remoteUser": "vscode",
	"hostRequirements": {
		"memory": "4gb"
	},
  "forwardPorts": [27017],
	"portsAttributes": {
		"9090": {
			"label": "Akto Dashboard",
			"onAutoForward": "openBrowser"
		}
	},
	"onCreateCommand": "cd apps/dashboard && npm install && cd ../.. && mvn clean install -DskipTests=true -Pdevcontainer",
	"customizations": {
		"vscode": {
			"settings": {
				"restoreTerminals.terminals": [
					{
						"splitTerminals": [
							{
								"name": "VueJS",
								"commands": [
												"cd apps/dashboard", 
												"npm run hot"
											]
							}
						]   
					},					{
						"splitTerminals": [
							{
								"name": "Testing",
								"commands": [
												"export AKTO_MONGO_CONN=\"mongodb://localhost:27017\"",
												"export DASHBOARD_MODE=\"local_deploy\"",
												"java -jar apps/testing/target/testing-1.0-SNAPSHOT-jar-with-dependencies.jar"
											]
							}
						]
					},
					{
						"splitTerminals": [
							{
								"name": "Dashboard",
								"commands": [
												"export AKTO_MONGO_CONN=\"mongodb://localhost:27017\"",
												"export DASHBOARD_MODE=\"local_deploy\"",
												"mvn --projects :dashboard --also-make jetty:run -Pdevcontainer -Djetty.port=9090"
											]
							}
						]
					}
			  ]
			},
			"extensions": [
				"EthanSK.restore-terminals"
			]
		},
		"codespaces": {
			"settings": {
				"restoreTerminals.terminals": [
					{
						"splitTerminals": [
							{
								"name": "VueJS",
								"commands": [
												"cd apps/dashboard", 
												"npm run hot"
											]
							}
						]   
					},
					{
						"splitTerminals": [
							{
								"name": "Dashboard",
								"commands": [
												"export AKTO_MONGO_CONN=\"mongodb://localhost:27017\"",
												"export DASHBOARD_MODE=\"local_deploy\"",
												"mvn --projects :dashboard --also-make jetty:run -Pdevcontainer -Djetty.port=9090"
											]
							}
						]
					},
					{
						"splitTerminals": [
							{
								"name": "Testing",
								"commands": [
												"export AKTO_MONGO_CONN=\"mongodb://localhost:27017\"",
												"export DASHBOARD_MODE=\"local_deploy\"",
												"java -jar apps/testing/target/testing-1.0-SNAPSHOT-jar-with-dependencies.jar"
											]
							}
						]
					}
			  ]
			},
			"extensions": [
				"EthanSK.restore-terminals"
			]
		}
	}

}
